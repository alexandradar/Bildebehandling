import cv2

# Load the image
image_path = '/Users/Ellaberg/Desktop/Svar_rad.png'
image = cv2.imread(image_path, cv2.IMREAD_GRAYSCALE)

# Define the thresholds for black and white pixels
black_threshold = 100  # Adjust this threshold based on the actual image
white_threshold = 200  # Adjust this threshold based on the actual image

# Initialize variables to keep track of white pixel counts
counting = False
white_pixel_count = 0

# Iterate through the pixels in the row (adjust the row index as needed)
row_index = 1  # Adjust this index to the row you want to analyze
row = image[row_index]

for pixel in row:
    if pixel < black_threshold:
        counting = True
    elif pixel > white_threshold and counting:
        white_pixel_count += 1

# Print the white pixel count between the black lines in the row
print(f"Row {row_index}: {white_pixel_count} white pixels between black lines")
